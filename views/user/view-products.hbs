<section style="background-image: linear-gradient(to bottom, #000000, #2b2a2b, #515152, #797b7d, #a4a9aa);">
  <div class="container pt-3">
    <div class="row">
      {{#each products}}
        <div class="col-md-3 p-3" >
          <div class="card" style="width: 15rem; height:28rem">
            <img
              class="card-img-top"
              src="/product-images/{{this._id}}.jpg"
              alt="Card image cap"
              style="height: 12rem;"
            />
            <div class="card-body">
              <h5 class="card-title">{{this.Title}}</h5>
              <p class="card-text">{{this.Description}}</p>
              
            </div>
            <div style="padding: 5px; margin: auto;">
               {{!-- <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Add to Cart</a> --}}
               <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>
